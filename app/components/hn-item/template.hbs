<span class="index">{{index}}</span>
<div class="metadata">
  <h2>
    {{#if isSelfLink}}
      {{#link-to "item" @itemID}}{{@title}}{{/link-to}}
    {{else}}
      <a href={{@url}}>{{@title}}</a>
    {{/if}}

    {{#if @domain}}<span class="domain">({{@domain}})</span>{{/if}}
  </h2>
  <p>
  	{{#if isJob}}
  		<span>{{time-format timestamp}}</span>
  	{{else}}
    	<span>{{scoreText}} by {{@by}} {{time-format timestamp}}</span>
    {{/if}}
  </p>
</div>
<div class="Comments">
  {{#link-to "item" @itemID}}
    {{#if @commentsCount}}
      {{@commentsCount}}
    {{else}}
      <span></span>
    {{/if}}
  {{/link-to}}
</div>
