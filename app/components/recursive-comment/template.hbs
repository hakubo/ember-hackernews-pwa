<article class="Comment">
  <header>
    <span class="user"><i class="icon">person</i> {{@item.user}}</span>
    {{time-format @item.time}}
  </header>
  <div class="content">{{{@item.content}}}</div>

  {{#each @item.comments key="id" as |item|}}
    <RecursiveComment @item={{item}} />
  {{/each}}
</article>
